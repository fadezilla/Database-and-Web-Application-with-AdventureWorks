<!DOCTYPE html>
<html>

<head>
  <title>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark shadowme">
    <div class="container-fluid">
      <div>
        <img src="http://images.restapi.co.za/pvt/Noroff-64.png" alt="" class="navbar-brand" id="spritespin">
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>
  <div class="container-fluid bg-dark"></div>
  <h2 class="p-3">Products</h2>
  <table class="table table-hover">
    <tbody>
      <% function createTableRow(title, data) { %>
        <tr class="table-dark-50">
          <th class="text-white bg-black"><%= title %></th>
          <td class="bg-white text-black fw-bolder"><%= data %></td>
        </tr>
      <% } %>
  
      <% createTableRow("Product ID", product.ProductID); %>
      <% createTableRow("Product Name", product.Name); %>
      <% createTableRow("Color", product.Color); %>
      <% createTableRow("Size", product.Size); %>
      <% createTableRow("Weight", product.Weight); %>
      <% createTableRow("List Price", product.ListPrice); %>
      <% createTableRow("Sell Start Date", product.SellStartDate); %>
    </tbody>
  </table>
</div>
</body>
</html>